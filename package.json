{
  "name": "traka-log-analyzer",
  "version": "3.0.0",
  "description": "Traka Log Analyzer - Desktop Edition with automatic log file discovery",
  "main": "main.js",
  "author": {
    "name": "Traka",
    "email": "support@traka.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "chokidar": "^4.0.1"
  },
  "build": {
    "appId": "com.traka.loganalyzer",
    "productName": "Traka Log Analyzer",
    "copyright": "Copyright (c) 2026 Traka, an ASSA ABLOY company",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "signtoolOptions": {
        "publisherName": "Traka - ASSA ABLOY"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerSidebar": "build/installerSidebar.bmp",
      "uninstallerSidebar": "build/uninstallerSidebar.bmp",
      "license": "build/license.txt",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Traka Log Analyzer",
      "include": "build/installer.nsh",
      "installerLanguages": [
        "en_US"
      ],
      "menuCategory": "Traka",
      "uninstallDisplayName": "Traka Log Analyzer"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "css/**/*",
      "js/**/*",
      "img/**/*",
      "user-guide.html",
      "docs/**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "extraResources": []
  }
}
